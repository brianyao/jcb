%h2 句子编辑
= form_tag sentence_path(@sentence), :method => :put, :id => "sentences_form" do
  = render :partial => 'sentence_editing_form'
  = label :sentence, :add_date, '修改最近更新时间'
  = datetime_select :sentence, :updated_at, :use_month_numbers => true
  %div
    = submit_tag '更新句子'
= button_to '删除句子', sentence_path(@sentence), :method => :delete, :confirm => 'Are you sure?'
= button_to '取消编辑', sentences_path, :method => :get