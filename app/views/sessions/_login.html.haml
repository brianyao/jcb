#login
  - if @current_user
    %div#welcome_title
      %div#welcom_message Welcome, #{@current_user.name}!
      %div#logout_link= link_to 'Log Out', logout_path
  - else
    %ol#log_nav
      %li.login= link_to '使用腾讯QQ登陆', "/auth/qq_connect"
      %li.login= link_to '使用新浪微博登陆', "/auth/weibo"
      %li.login= link_to 'login with Facebook account', "/auth/facebook"
